import java.util.*;

public class learning2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();       //taking input
        int h = sc.nextInt();
        int count = 0;

        for(int i = 0; i < n; i++){     //run a loop for taking height
            int userInput = sc.nextInt();
            if (userInput > h){
                count +=2;      //if the given height is greater than h, add 2
            }
            else{
                count++;        //if the given height is not greater than h, add 1
            }
        }
        System.out.println(count);
        
    }
    
}
