import java.util.*;

public class learning2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int h = sc.nextInt();
        int count = 0;

        for(int i = 0; i < n; i++){
            int userInput = sc.nextInt();
            if (userInput > h){
                count +=2;
            }
            else{
                count++;
            }
        }
        System.out.println(count);
        
    }
    
}
